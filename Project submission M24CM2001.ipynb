import numpy as np
from math import cos, radians

# --- Quantum Mechanical Prediction for the CHSH Inequality ---

# The Bell Test compares the correlations measured for entangled particles 
# (e.g., photons with entangled polarization) at four specific settings.

# Settings (in degrees) for the CHSH test:
# Alice's settings: a1, a2
# Bob's settings: b1, b2
A1_ANGLE = 0.0
A2_ANGLE = 45.0
B1_ANGLE = 22.5
B2_ANGLE = 67.5

# The CHSH parameter S is calculated as:
# S = E(a1, b1) - E(a1, b2) + E(a2, b1) + E(a2, b2)
# where E(a, b) is the correlation function between Alice's measurement 'a' and Bob's measurement 'b'.

def quantum_correlation_E(angle_a, angle_b):
    """
    Calculates the theoretical quantum correlation E(a, b) for two entangled 
    particles (in a maximally entangled state, e.g., |psi->) 
    at detector settings angle_a and angle_b.
    
    The quantum mechanical prediction is E(a, b) = -cos(2 * (angle_a - angle_b)).
    """
    delta_theta = radians(angle_a - angle_b)
    # Factor of 2 in 2*delta_theta is key for spin/polarization 
    return -cos(2 * delta_theta)

# 1. Calculate the four required correlation values based on Quantum Mechanics
E_a1_b1 = quantum_correlation_E(A1_ANGLE, B1_ANGLE)
E_a1_b2 = quantum_correlation_E(A1_ANGLE, B2_ANGLE)
E_a2_b1 = quantum_correlation_E(A2_ANGLE, B1_ANGLE)
E_a2_b2 = quantum_correlation_E(A2_ANGLE, B2_ANGLE)

# 2. Calculate the CHSH value S_quantum
S_quantum = E_a1_b1 - E_a1_b2 + E_a2_b1 + E_a2_b2

# --- Classical/Local Hidden Variable (LHV) Theory Limit ---
# According to LHV theories, the CHSH parameter S must satisfy:
S_CLASSICAL_LIMIT = 2.0

# 3. Simulate a large number of trials to estimate S_quantum empirically
NUM_TRIALS = 100000

# The actual simulation generates pairs of measurements (e.g., +/- 1 for spin up/down)
# based on the quantum probability, P(a, b) = 0.5 * sin^2(delta_theta)

def simulate_chsh_term(angle_a, angle_b, trials):
    """
    Simulates the measurement results and calculates the empirical correlation E.
    """
    delta_theta = radians(angle_a - angle_b)
    
    # Probability of getting the same result (e.g., both +1 or both -1)
    # For |psi-> entangled state, P(same) = 0.5 * sin^2(delta_theta)
    # The probability of getting the SAME results is P_same = 0.5 * (1 - E)
    # We use the probability of getting OPPOSITE results: P_opposite = 0.5 * (1 + E)
    # where E = -cos(2*delta_theta)
    # P_same = 0.5 * (1 - (-cos(2*delta_theta))) = 0.5 * (1 + cos(2*delta_theta)) = cos^2(delta_theta)
    P_same = cos(delta_theta)**2
    
    results_a = np.random.choice([-1, 1], size=trials)
    results_b = np.zeros(trials)

    for i in range(trials):
        # Determine Bob's result based on Alice's result and the probability P_same
        if np.random.rand() < P_same:
            results_b[i] = results_a[i] # Same result
        else:
            results_b[i] = -results_a[i] # Opposite result
            
    # Correlation E is the average of the product of the measurements (A * B)
    empirical_E = np.mean(results_a * results_b)
    return empirical_E

# Run the simulation for the four terms
E_sim_a1_b1 = simulate_chsh_term(A1_ANGLE, B1_ANGLE, NUM_TRIALS)
E_sim_a1_b2 = simulate_chsh_term(A1_ANGLE, B2_ANGLE, NUM_TRIALS)
E_sim_a2_b1 = simulate_chsh_term(A2_ANGLE, B1_ANGLE, NUM_TRIALS)
E_sim_a2_b2 = simulate_chsh_term(A2_ANGLE, B2_ANGLE, NUM_TRIALS)

# Calculate the simulated CHSH value S_sim
S_sim = E_sim_a1_b1 - E_sim_a1_b2 + E_sim_a2_b1 + E_sim_a2_b2


# --- Output Results ---
print("--- Bell Test Simulation (CHSH Inequality) ---")
print(f"Number of Simulated Trials: {NUM_TRIALS:,}")
print("\n--- Correlation Values E(a, b) ---")
print(f"E(a1, b1) = E({A1_ANGLE}°, {B1_ANGLE}°) -> QM: {E_a1_b1:+.4f} | Simulated: {E_sim_a1_b1:+.4f}")
print(f"E(a1, b2) = E({A1_ANGLE}°, {B2_ANGLE}°) -> QM: {E_a1_b2:+.4f} | Simulated: {E_sim_a1_b2:+.4f}")
print(f"E(a2, b1) = E({A2_ANGLE}°, {B1_ANGLE}°) -> QM: {E_a2_b1:+.4f} | Simulated: {E_sim_a2_b1:+.4f}")
print(f"E(a2, b2) = E({A2_ANGLE}°, {B2_ANGLE}°) -> QM: {E_a2_b2:+.4f} | Simulated: {E_sim_a2_b2:+.4f}")

print("\n--- CHSH Parameter S ---")
print(f"S_CHSH (Quantum Prediction): {S_quantum:+.4f} (Also known as Cirel'son's Bound, 2*sqrt(2))")
print(f"S_CHSH (Simulated Result)  : {S_sim:+.4f} (Should be close to the QM Prediction)")

print(f"\n--- Classical Limit (Local Realism) ---")
print(f"S_CLASSICAL (Bell Inequality): |S| <= {S_CLASSICAL_LIMIT}")

# Highlight the violation
is_violated = abs(S_quantum) > S_CLASSICAL_LIMIT
print(f"\nQuantum Prediction Violates Classical Limit? {'YES' if is_violated else 'NO'}")
print("This violation is the essence of the Bell Test: Quantum Entanglement cannot be explained by local realism. ")
